---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>

<style is:global>
	* {
		margin: 0px;
		padding: 0px;
	}

	html, body {
		text-align: center;
		width: 100%;
		height: 100%;
		overflow: hidden;
	}

	main {
		width: 100%;
		height: 100%;
	}

	canvas {
		width: 100%;
		height: 100%;
	}
</style>
